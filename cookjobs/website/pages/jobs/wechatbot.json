{
    "type": "page",
    "body": [
        {
            "type": "button-toolbar",
            "buttons": [
                {
                    "type": "button",
                    "label": "创建Moss任务",
                    "level": "primary",
                    "actionType": "drawer",
                    "drawer": {
                        "position": "right",
                        "size": "lg",
                        "title": "创建Moss作业任务",
                        "body": {
                            "type": "form",
                            "api": "post:/api/jobs/wechat",
                            "body": [
                                {
                                    "type": "list-select",
                                    "name": "llm",
                                    "label": "大模型选择",
                                    "btnLabel": 0,
                                    "clearable": true,
                                    "options": [
                                        {
                                            "label": "通用-InternLM",
                                            "value": 0
                                        },
                                        {
                                            "label": "运维领域",
                                            "value": 1,
                                            "disabled": true
                                        },
                                        {
                                            "label": "金融领域",
                                            "value": 2,
                                            "disabled": true
                                        }
                                    ],
                                    "required": true
                                },
                                {
                                    "type": "divider"
                                },
                                {
                                    "type": "button-group-select",
                                    "name": "api_type",
                                    "label": "调用方式",
                                    "clearable": true,
                                    "options": [
                                        {
                                            "label": "文本信息",
                                            "value": "txt_msg"
                                        },
                                        {
                                            "label": "POST",
                                            "badge": {
                                                "mode": "ribbon",
                                                "text": "API"
                                            },
                                            "value": "post"
                                        },
                                        {
                                            "label": "GET",
                                            "badge": {
                                                "mode": "ribbon",
                                                "text": "API"
                                            },
                                            "value": "get"
                                        }
                                    ],
                                    "required": true
                                },
                                {
                                    "type": "input-text",
                                    "name": "job_name",
                                    "label": "任务名称",
                                    "placeholder": "填写任务名称",
                                    "required": true
                                },
                                {
                                    "type": "combo",
                                    "name": "job_nlu",
                                    "label": "识别任务语句",
                                    "multiple": true,
                                    "required": true,
                                    "value": [
                                        {}
                                    ],
                                    "items": [
                                        {
                                            "name": "job_nlu_item",
                                            "type": "input-text",
                                            "placeholder": "识别用户需求语句，进而执行相应任务（可设置多条）",
                                            "value": "",
                                            "columnClassName": "w-sm"
                                        }
                                    ]
                                },
                                {
                                    "type": "combo",
                                    "name": "slot_json",
                                    "label": "槽位分析",
                                    "visibleOn": "${OR(api_type === 'post', api_type === 'get')}",
                                    "multiple": true,
                                    "multiLine": true,
                                    "required": true,
                                    "inline": true,
                                    "value": [
                                        {}
                                    ],
                                    "items": [
                                        {
                                            "type": "radios",
                                            "name": "slot_type",
                                            "label": "",
                                            "inline": true,
                                            "options": [
                                                {
                                                    "label": "大模型识别",
                                                    "value": "0"
                                                },
                                                {
                                                    "label": "正则识别",
                                                    "value": "1"
                                                }
                                            ],
                                            "required": true
                                        },
                                        {
                                            "name": "slot_key",
                                            "type": "input-text",
                                            "placeholder": "只支持英文变量",
                                            "label": "槽位变量",
                                            "validations": {
                                                "isAlpha": true
                                            },
                                            "required": true
                                        },
                                        {
                                            "type": "input-text",
                                            "label": "正则表达式",
                                            "placeholder": "支持使用正则表达式规则",
                                            "hiddenOn": "data.slot_type != 1",
                                            "name": "regexs",
                                            "required": true
                                        },
                                        {
                                            "type": "input-text",
                                            "label": "用户提示",
                                            "placeholder": "提示用户槽位值语句",
                                            "name": "slot_desc",
                                            "required": true
                                        }
                                    ]
                                },
                                {
                                    "type": "textarea",
                                    "name": "api",
                                    "label": "调用api地址",
                                    "visibleOn": "${OR(api_type === 'post', api_type === 'get')}",
                                    "placeholder": "使用双大括号引用槽位变量，如使用GET请求：\nhttps://xxx.xxx.com/apitest?key1={{solt_name1}}&key2={{slot_name2}}",
                                    "required": true
                                },
                                {
                                    "type": "textarea",
                                    "name": "cus_resp",
                                    "label": "自定义返回",
                                    "visibleOn": "${OR(api_type === 'post', api_type === 'get')}",
                                    "placeholder": "若请求返回为Json, 可使用resp变量引用返回数据。\n例如：返回Json为 {'xxx':'yyy'}, 可使用变量: resp['xxx']"
                                },
                                {
                                    "type": "textarea",
                                    "name": "txt_msg",
                                    "label": "返回文本信息",
                                    "visibleOn": "${api_type === 'txt'}",
                                    "placeholder": "",
                                    "required": true
                                },
                                {
                                    "type": "input-text",
                                    "name": "comment",
                                    "label": "备注"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "type": "crud",
            "name": "thelist",
            "api": "get:/api/jobs/wechat",
            "syncLocation": false,
            "maxKeepItemSelectionLength": 11,
            "autoFillHeight": true,
            "orderBy": "id",
            "orderDir": "desc",
            "headerToolbar": [],
            "columns": [
                {
                    "name": "job_name",
                    "label": "作业名称"
                },
                {
                    "name": "job_nlu_web",
                    "type": "list",
                    "label": "识别任务语句",
                    "listItem": {
                        "body": "${item}"
                    }
                },
                {
                    "name": "api_type",
                    "label": "调用方式",
                    "type": "mapping",
                    "map": {
                        "txt": "<span class='label label-success'>文本信息</span>",
                        "post": "<span class='label label-success'>POST</span>",
                        "get": "<span class='label label-success'>GET</span>",
                        "*": "<span class='label label-danger'>错误</span>"
                    }
                },
                {
                    "name": "${IFS(api,api, txt_msg, txt_msg)}",
                    "label": "调用信息"
                },
                {
                    "name": "comment",
                    "label": "备注"
                },
                {
                    "name": "update_time",
                    "label": "更新时间"
                },
                {
                    "type": "operation",
                    "label": "操作",
                    "buttons": [
                        {
                            "label": "修改",
                            "type": "button",
                            "actionType": "drawer",
                            "drawer": {
                                "position": "right",
                                "size": "lg",
                                "title": "修改Moss作业任务",
                                "body": {
                                    "type": "form",
                                    "api": {
                                        "method": "update",
                                        "url": "/api/jobs/wechat",
                                        "data": {
                                            "id": "${id}",
                                            "llm": "${llm}",
                                            "api_type": "${api_type}",
                                            "job_name": "${job_name}",
                                            "job_nlu": "${job_nlu}",
                                            "slot_json": "${slot_json}",
                                            "api": "${api}",
                                            "txt_msg": "${txt_msg}",
                                            "comment": "${comment}",
                                            "cus_resp": "${cus_resp}"
                                        }
                                    },
                                    "body": [
                                        {
                                            "type": "list-select",
                                            "name": "llm",
                                            "label": "大模型选择",
                                            "btnLabel": 0,
                                            "clearable": true,
                                            "options": [
                                                {
                                                    "label": "通用-InternLM",
                                                    "value": 0
                                                },
                                                {
                                                    "label": "运维领域",
                                                    "value": 1,
                                                    "disabled": true
                                                },
                                                {
                                                    "label": "金融领域",
                                                    "value": 2,
                                                    "disabled": true
                                                }
                                            ],
                                            "required": true
                                        },
                                        {
                                            "type": "divider"
                                        },
                                        {
                                            "type": "button-group-select",
                                            "name": "api_type",
                                            "label": "调用方式",
                                            "clearable": true,
                                            "options": [
                                                {
                                                    "label": "文本信息",
                                                    "value": "txt"
                                                },
                                                {
                                                    "label": "POST",
                                                    "badge": {
                                                        "mode": "ribbon",
                                                        "text": "API"
                                                    },
                                                    "value": "post"
                                                },
                                                {
                                                    "label": "GET",
                                                    "badge": {
                                                        "mode": "ribbon",
                                                        "text": "API"
                                                    },
                                                    "value": "get"
                                                }
                                            ],
                                            "required": true
                                        },
                                        {
                                            "type": "input-text",
                                            "name": "job_name",
                                            "label": "任务名称",
                                            "placeholder": "填写任务名称",
                                            "required": true
                                        },
                                        {
                                            "type": "combo",
                                            "name": "job_nlu",
                                            "label": "识别任务语句",
                                            "multiple": true,
                                            "required": true,
                                            "value": "",
                                            "items": [
                                                {
                                                    "name": "job_nlu_item",
                                                    "type": "input-text",
                                                    "placeholder": "识别用户需求语句，进而执行相应任务（可设置多条）",
                                                    "value": "",
                                                    "columnClassName": "w-sm"
                                                }
                                            ]
                                        },
                                        {
                                            "type": "combo",
                                            "name": "slot_json",
                                            "label": "槽位分析",
                                            "visibleOn": "${OR(api_type === 'post', api_type === 'get')}",
                                            "multiple": true,
                                            "multiLine": true,
                                            "required": true,
                                            "inline": true,
                                            "value": [
                                                {}
                                            ],
                                            "items": [
                                                {
                                                    "type": "radios",
                                                    "name": "slot_type",
                                                    "label": "",
                                                    "inline": true,
                                                    "options": [
                                                        {
                                                            "label": "大模型识别",
                                                            "value": "0"
                                                        },
                                                        {
                                                            "label": "正则识别",
                                                            "value": "1"
                                                        }
                                                    ],
                                                    "required": true
                                                },
                                                {
                                                    "name": "slot_key",
                                                    "type": "input-text",
                                                    "placeholder": "只支持英文变量",
                                                    "label": "槽位变量",
                                                    "validations": {
                                                        "isAlpha": true
                                                    },
                                                    "required": true
                                                },
                                                {
                                                    "type": "input-text",
                                                    "label": "正则表达式",
                                                    "placeholder": "支持使用正则表达式规则",
                                                    "hiddenOn": "data.slot_type != 1",
                                                    "name": "regexs",
                                                    "required": true
                                                },
                                                {
                                                    "type": "input-text",
                                                    "label": "用户提示",
                                                    "placeholder": "提示用户槽位值语句",
                                                    "name": "slot_desc",
                                                    "required": true
                                                }
                                            ]
                                        },
                                        {
                                            "type": "textarea",
                                            "name": "api",
                                            "label": "调用api地址",
                                            "visibleOn": "${OR(api_type === 'post', api_type === 'get')}",
                                            "placeholder": "可引用槽位变量，如使用GET请求：https://xxx.xxx.com/apitest?key1={{solt_name1}}&key2={{slot_name2}}",
                                            "required": true
                                        },
                                        {
                                            "type": "textarea",
                                            "name": "cus_resp",
                                            "label": "自定义返回",
                                            "visibleOn": "${OR(api_type === 'post', api_type === 'get')}",
                                            "placeholder": "若请求返回为Json, 可使用resp变量引用返回数据。\n例如：返回Json为 {'xxx':'yyy'}, 可使用变量: resp['xxx']"
                                        },
                                        {
                                            "type": "textarea",
                                            "name": "txt_msg",
                                            "label": "返回文本信息",
                                            "visibleOn": "${api_type === 'txt'}",
                                            "placeholder": "",
                                            "required": true
                                        },
                                        {
                                            "type": "input-text",
                                            "name": "comment",
                                            "label": "备注"
                                        }
                                    ]
                                }
                            }
                        },
                        {
                            "label": "删除",
                            "type": "button",
                            "actionType": "ajax",
                            "level": "danger",
                            "confirmText": "确认要删除？",
                            "api": {
                                "method": "delete",
                                "url": "/api/jobs/wechat",
                                "data": {
                                    "id": "${id}"
                                }
                            }
                        }
                    ]
                }
            ]
        }
    ]
}